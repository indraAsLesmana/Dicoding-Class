<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardElevation="0dp"
        app:cardCornerRadius="0dp">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent" android:layout_height="wrap_content">

        <ImageView android:layout_width="78dp" android:layout_height="78dp"
                   android:src="@drawable/img_arsenal"
                   android:id="@+id/tvHomeLogo"
        />
        <ImageView android:layout_width="78dp" android:layout_height="78dp"
                   android:src="@drawable/img_barca"
                   android:id="@+id/tvAwayLogo"
                   android:layout_alignParentStart="true" android:layout_marginStart="50dp"
                   android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
                   android:layout_marginLeft="50dp" android:layout_marginTop="0dp"/>

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  tools:text="Arsenal 0 vs 1 Barca"
                  android:layout_alignParentTop="true"
                  android:layout_marginTop="26dp"
                  android:layout_toEndOf="@+id/tvAwayLogo" android:layout_toRightOf="@+id/tvAwayLogo"
                  android:layout_marginLeft="9dp" android:layout_marginStart="8dp"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>
